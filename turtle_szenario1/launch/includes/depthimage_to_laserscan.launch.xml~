<launch>

  <arg name="nodelet_manager_name" default="laserscan_nodelet_manager"/>
  <arg name="scan_topic_remap" default="/scan" />
  <arg name="out_frame_id" default="/camera_depth_frame" />

  <node pkg="nodelet" type="nodelet" name="depthimage_to_laserscan"
        args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet $(arg nodelet_manager_name)">
    <param name="scan_height" value="10"/>
    <param name="output_frame_id" value="$(arg out_frame_id)"/>
    <param name="scan_time" value="0.033"/>
    <param name="range_min" value="0.4"/>
    <param name="range_max" value="6.5" />
    <remap from="image" to="/camera/depth_registered/image_raw"/>
    <remap from="scan" to="$(arg scan_topic_remap)"/>
  </node>
</launch>
