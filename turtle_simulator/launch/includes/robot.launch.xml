
<launch>
	<!-- set robot name -->
	<arg name="robot_name" value="turtle1"/>
	
	<!-- load Robot Description for Gazebo -->
	<param name="robot_description"
        command="$(find xacro)/xacro.py '$(find turtle_description)/robots/kobuki_hexagons_kinect.urdf.xacro'"/>

	<!-- spawn Robot Model in Gazebo instance
	TODO: make Initial Pose variable -->
	<node pkg="gazebo_ros" type="spawn_model" name="spawn_$(arg robot_name)" 
        args="$(optenv ROBOT_INITIAL_POSE) -unpause -urdf -param robot_description -model $(arg robot_name)"
        respawn="false">
  	</node>
  	
  	
</launch>